@model List<Ticket>
<section class="u-align-left u-clearfix u-container-align-center u-image u-shading u-section-buy" id="carousel_1a2e" data-animation-name="" data-animation-duration="0" data-animation-delay="0" data-animation-direction="">
    <div class="u-clearfix u-sheet u-sheet-1">
        <div class="u-expanded-width u-list u-list-1">
            <div class="u-repeater u-repeater-1">
                <div class="container">
                    <h2>Покупка билета</h2>
                    <form method="POST" action="TicketChoicePost">
                        <div class="form-group">
                            @if (Model.Count != 0)
                            {
                                <input type="hidden" name="personId" value="@ViewBag.PersonId">
                                <label for="Race">Билет:</label>
                                <select class="form-control" id="ticketId" name="ticketId">
                                    @foreach (var ticket in Model)
                                    {
                                        <option value=@ticket.Id>@ticket.Date.ToShortDateString(), @ticket.Time.ToShortTimeString()</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary" style="margin-top: 5%; margin-bottom:5%">Купить билеты</button>
                            }
                            else
                            {
                                <p>Билеты на данный рейс не найдены</p>
                            }
                                

                        </div>
                        
                    </form>
                </div>

                <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
            </div>
        </div>
    </div>
</section>
